<h2>Text Helpers</h2>

<ul>
  <% @numbers.each do |n| %>
    <li style="background-color: <%= cycle('red', 'green', 'orange', 'purple') %>"><%= n  %></li>
  <% end %>
</ul>

<p>You have <%= pluralize(@friend_count, 'friend') %></p>
<p>You have <%= pluralize @enemies_count, 'fish' %></p>

<p><%= truncate(@story, :length => 20) %></p>
