<h2><%= @butterfly['name'] %></h2>
<h3>Family: <%= @butterfly['family'] %></h3>

<% unless @butterfly.plant.nil? %>
  <h3>
    Larval plant:
    <a href="/plants/<%= @butterfly.plant.id %>"><%= @butterfly.plant.name %></a>
  </h3>
<% end %>

<% unless @butterfly['image'].nil? || @butterfly['image'].empty? %>
  <img class="feature" src="<%= @butterfly['image'] %>" alt="<%= @butterfly['name'] %>">
<% end %>

<div class="controls">
  <a href="/butterflies/<%= @butterfly['id'] %>/edit">Edit</a>
  <a href="/butterflies/<%= @butterfly['id'] %>/delete">Delete</a>
</div>
